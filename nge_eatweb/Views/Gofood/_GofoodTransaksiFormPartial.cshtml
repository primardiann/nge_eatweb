@model nge_eatweb.Models.ViewModels.GofoodTransaksiFormViewModel

<h2 class="text-xl font-semibold mb-4">Tambah Transaksi GoFood</h2>

<form asp-action="Create" method="post">
    <div class="mb-4">
        <label class="block font-medium mb-1">Tanggal Transaksi</label>
        <input type="date" asp-for="TanggalTransaksi" class="w-full border rounded px-3 py-2" />
    </div>
    <div class="mb-4">
        <label class="block font-medium mb-1">Waktu</label>
        <input type="time" asp-for="Waktu" class="w-full border rounded px-3 py-2" />
    </div>
    <div class="mb-4">
        <label class="block font-medium mb-1">Pelanggan</label>
        <input type="text" asp-for="NamaPelanggan" class="w-full border rounded px-3 py-2" />
    </div>
    <div class="mb-4">
        <label class="block font-medium mb-1">Metode</label>
        <input type="text" asp-for="Metode" class="w-full border rounded px-3 py-2" />
    </div>
    <div class="mb-4">
        <label asp-for="IdItems" class="block mb-1 font-medium text-gray-700">Pilih Menu</label>
        <select asp-for="IdItems" asp-items="Model.ItemOptions" class="w-full border rounded p-2">
            <option value="">-- Pilih Menu --</option>
        </select>
        <span asp-validation-for="IdItems" class="text-red-500 text-sm"></span>
    </div>

    <div class="text-right">
        <button type="submit" class="bg-[#F58220] text-white px-4 py-2 rounded">Simpan</button>
    </div>
</form>
