@{
    ViewData["Title"] = "Landing Page";
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #fff;
        color: #BE1E2D;
    }

    .landing-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    h1.main-title {
        font-size: 3.5rem;
        font-weight: 900;
        text-align: center;
        margin-bottom: 2rem;
        text-shadow: 2px 2px 5px rgba(0,0,0,0.3);
    }

    .bg-section {
        position: relative;
        width: 100%;
        height: 320px;
        margin-bottom: 2rem;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .bg-section:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 30px rgba(0,0,0,0.25);
        }

    .bg-image {
        position: absolute;
        inset: 0;
        background-size: cover;
        background-position: center;
        filter: brightness(0.6);
        transition: filter 0.3s ease;
    }

    .bg-section:hover .bg-image {
        filter: brightness(0.85);
    }

    .overlay-text {
        position: absolute;
        bottom: 25px;
        left: 25px;
        color: #fff;
        font-size: 2rem;
        font-weight: 700;
        text-shadow: 2px 2px 6px rgba(0,0,0,0.7);
        user-select: none;
    }

    @@media (max-width: 600px) {
        h1 .main-title

    {
        font-size: 2.2rem;
    }

    .bg-section {
        height: 200px;
        border-radius: 15px;
    }

    .overlay-text {
        font-size: 1.3rem;
        bottom: 15px;
        left: 15px;
    }

    }
</style>

<div class="landing-wrapper">
    <h1 class="main-title">Nge Eat By<br />Nada</h1>

    <div class="bg-section">
        <div class="bg-image" style="background-image: url('/images/cabe_ijo.png');"></div>
        <div class="overlay-text">Cabe Ijo</div>
    </div>

    <div class="bg-section">
        <div class="bg-image" style="background-image: url('/images/chicken_mentai.png');"></div>
        <div class="overlay-text">Chicken Mentai</div>
    </div>

    <div class="bg-section">
        <div class="bg-image" style="background-image: url('/images/sambal_geprek.png');"></div>
        <div class="overlay-text">Sambal Geprek</div>
    </div>
</div>
