<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - nge_eatweb</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nge_eatweb.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: white;
        }

        header,
        footer {
            background: linear-gradient(to bottom, #FFD5AB, #F58220);
        }

        main {
            flex: 1;
            background-color: white;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            justify-content: start;
            width: 100%;
        }


        .navbar-ngeeat {
            background: transparent !important;
        }

        .navbar-brand img {
            max-height: 50px;
        }

        .hero-section h1 {
            font-size: 2.8rem;
            font-weight: 700;
            color: #BE1E2D;
            margin-bottom: 1rem;
        }

        .hero-section p {
            font-size: 1.2rem;
            color: #333;
            margin-bottom: 2rem;
        }

        .btn-dashboard {
            padding: 0.75rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            background-color: #BE1E2D;
            color: white;
            border: none;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn-dashboard:hover {
                background-color: #a31824;
            }

        footer {
            color: white;
            padding: 2rem 0;
            text-align: center;
        }

        .footer-left img {
            max-height: 40px;
            margin-bottom: 0.5rem;
        }

        .footer-left p {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-ngeeat navbar-expand-md sticky-top">
            <div class="container-fluid d-flex align-items-center justify-content-between px-3">
                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index" style="gap: 8px;">
                    <img src="~/images/logo.png" alt="Logo Ngeeat Admin" style="max-height: 45px;" />
                    <span style="color: white; font-weight: 600; font-size: 1.1rem;">Nge Eat By Nada</span>
                </a>

                <!-- Optional Nav Items -->
                <div class="d-none d-md-flex gap-4">
                    <a href="#fitur" class="text-white text-decoration-none fw-semibold">Fitur</a>
                    <a href="#tentang" class="text-white text-decoration-none fw-semibold">Tentang</a>
                    <a href="/Login/Login" class="btn btn-sm btn-light fw-semibold px-3 rounded-pill">Dashboard</a>
                </div>
            </div>
        </nav>
    </header>


    <!-- KONTEN -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="footer-left">
                <img src="~/images/logo.png" class="img-fluid" alt="Logo" />
                <p>&copy; 2025 - Ngeeat <br /> Kelompok 4</p>
            </div>
        </div>
    </footer>

    <!-- SCRIPT -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
