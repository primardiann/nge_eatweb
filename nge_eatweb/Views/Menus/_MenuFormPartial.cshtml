@model nge_eatweb.ViewModels.MenuFormViewModel

@{
    var actionUrl = Model.Id != 0
        ? Url.Action("Edit", "Menus")
        : Url.Action("Create", "Menus");
}
<h2 class="text-xl font-semibold mb-4">
    @(Model.Id == 0 ? "Tambah Menu Baru" : "Edit Menu")
</h2>


<form method="post" action="@actionUrl" id="formTambahMenu" class="w-full max-w-xl text-sm text-gray-700">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="grid grid-cols-2 gap-x-6 gap-y-4">
        <!-- Nama Menu -->
        <div class="col-span-2">
            <label for="NamaItem" class="mb-1 block">Nama Menu</label>
            <input type="text" name="NamaItem" id="NamaItem"
                   class="border rounded-sm px-2 py-1 w-full"
                   style="border-color: #F58220;"
                   placeholder="Contoh: Nasi Ayam Geprek"
                   value="@Model.NamaItem"
                   required />
        </div>

        <!-- Kategori -->
        <div class="col-span-2">
            <label for="Kategori" class="mb-1 block">Kategori</label>
            <input type="text" name="Kategori" id="Kategori"
                   class="border rounded-sm px-2 py-1 w-full"
                   style="border-color: #F58220;"
                   placeholder="Contoh: Minuman / Makanan"
                   value="@Model.Kategori"
                   required />
        </div>

        <!-- Harga -->
        <div class="col-span-2">
            <label for="Harga" class="mb-1 block">Harga</label>
            <input type="number" name="Harga" id="Harga"
                   class="border rounded-sm px-2 py-1 w-full"
                   style="border-color: #F58220;"
                   placeholder="Contoh: 25000"
                   value="@Model.Harga"
                   required />
        </div>
    </div>


    <!-- Tombol -->
    <div class="flex justify-end mt-6 space-x-2">
        <button type="button"
                onclick="@(Model.Id == 0 ? "closeModal()" : "closeEditModal()")"
                class="px-4 py-2 border border-gray-400 text-gray-700 rounded hover:bg-gray-100">
            Batal
        </button>
        <button type="submit"
                class="px-4 py-2 bg-[#F58220] text-white rounded hover:bg-orange-600">
            Simpan
        </button>
    </div>

    <!-- Tombol "×" kecil -->
    <button type="button"
            onclick="@(Model.Id == 0 ? "closeModal()" : "closeEditModal()")"
            class="absolute top-3 right-3 text-gray-600 hover:text-gray-900 text-xl font-bold">
        &times;
    </button>
</form>
